@model LoginViewModel
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <h1>Nova Conta</h1>
                <hr />
                <form asp-controller="Account" asp-action="Register" method="post">
                    <!--ReturnUrl input-->
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <!-- User input -->
                    <div class="form-outline mb-4">
                        <input asp-for="UserName" type="text" id="form1Example13" class="form-control form-control-lg" />
                        <label class="form-label" for="form1Example13">Username</label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input asp-for="Password" type="password" id="form1Example23" class="form-control form-control-lg" />
                        <label asp-for="Password" class="form-label" for="form1Example23">Password</label>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Criar</button>


                </form>
            </div>
        </div>
    </div>
</section>